px2Rem(num) {
 return unit((num / 75), rem);
}
px2rem(num) {
 return unit((num / 37.5), rem);
}
flex-box($justify-content = flex-start, $align-items = center, $flex-direction = row) {
 display: flex;
 justify-content: $justify-content;
 align-items: $align-items;
 flex-direction: $flex-direction;
}
.bg {
 background-repeat: no-repeat;
 background-size: 100% 100%;
 background-position: center;
}
bg($position = center) {
 background-repeat: no-repeat;
 background-size: cover;
 background-position: $position center;
}
.border-1px-bottom {
 position: relative;
 &:after {
  content: '';
  position: absolute;
  z-index: 1;
  background-color: $border-grey;
  width: 100%;
  height: 1px;
  bottom: 0;
  left: 0;
  transform-origin: 50% 100%;
  transform: scaleY(0.5);
 }
}
.border-1px-top {
 position: relative;
 &:before {
  content: '';
  position: absolute;
  z-index: 1;
  background-color: $border-grey;
  width: 100%;
  height: 1px;
  top: 0;
  left: 0;
  transform-origin: 50% 0;
  transform: scaleY(0.5);
 }
}
.text-ellipsis {
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
}
.text-center {
 text-align: center;
}
.color-red {
 color: $title-red !important;
}
.color-green {
 color: $title-green !important;
}
